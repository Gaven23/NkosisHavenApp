@page "/DoctorPage"

@using NkosisHavenAppApi.Data.Entities

@if (doctors == null)
{
    <p><em>Loading...</em></p>
}
else if (!doctors.Any())
{
    <p><em>No doctors available.</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Doctor ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Specialty</th>
                <th>Email</th>
                <th>Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doctor in doctors)
            {
                <tr>
                    <td>@doctor.DoctorId</td>
                    <td>@doctor.FirstName</td>
                    <td>@doctor.LastName</td>
                    <td>@doctor.Specialty</td>
                    <td>@doctor.Email</td>
                    <td>@doctor.PhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Doctor> doctors;

    protected override async Task OnInitializedAsync()
    {
        await LoadDoctorsAsync();
    }

    private async Task LoadDoctorsAsync()
    {
        await Task.Delay(1000); // Simulate loading time

        // Dummy data to simulate loading doctors
        doctors = new List<Doctor>
        {
            new Doctor { DoctorId = 1, FirstName = "John", LastName = "Doe", Specialty = "Cardiology", Email = "johndoe@example.com", PhoneNumber = "081-555-1234" },
            new Doctor { DoctorId = 2, FirstName = "Jane", LastName = "Smith", Specialty = "Neurology", Email = "janesmith@example.com", PhoneNumber = "081-555-5678" }
        };
    }



}
